<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
</head>
<body>
    <%- include('./partials/nav.ejs')  %> 

    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-info">
                        <h3 class="text-light">Edit User</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/edit/<%= user._id %>" method="POST">
                            <div class="mb-3">
                                <label for="name">Name</label>
                                <input type="text" name="name" value="<%= user.name %>" class="form-control form-control-lg" required>
                            </div>
                            <div class="mb-3">
                                <label for="email">Email</label>
                                <input type="email" name="email" value="<%= user.email %>" class="form-control form-control-lg" required>
                            </div>
                            <div class="mb-3">
                                <label for="phone">Phone</label>
                                <input type="tel" name="phone" value="<%= user.phone %>" class="form-control form-control-lg" required>
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Select Image</label>
                                <input type="file" name="image" class="form-control form-control-lg" >
                                <img src="/<%= user.image %>" alt="<%= user.name %>" width="100" class="img-thumbnail mt-1">
                                <input type="hidden" name="old_image" value="<%= user.image %>">
                            </div>
                            <div class="mb-3 d-grid">
                                <input type="submit" value="Update User" class="btn btn-info btn-lg" required>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/footer.ejs')  %> 

    <!-- in order to attach the data to the body of the post request
    we need the NAME attribute -->
    <!-- <script src="/js/edit.js"></script> -->
</body>
</html>